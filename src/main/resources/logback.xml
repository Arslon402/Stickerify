<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%highlight([%d{dd/MM/YYYY HH:mm:ss.SSS}] %-5level) %boldCyan(%-10logger{0}) %boldYellow(-) %msg%n%red(%ex{3})</pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>
